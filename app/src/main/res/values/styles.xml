<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColorHint">@drawable/selector_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EditTextStyleMap" parent="android:Widget.EditText">
        <item name="android:textColorHint">@drawable/selector_edit_text_map</item>
        <item name="android:padding">8dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/edit_text_design_map</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Spinner.DropDown">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:background">@drawable/spinner_design</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="ButtonMapStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_map_custom</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
    </style>

    <style name="ToolbarTheme.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
