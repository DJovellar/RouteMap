<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColorHint">@drawable/selector_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="ButtonMapStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_map_custom</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
